# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://sop_user:sop_password_2025@localhost:5432/sop_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# PDF SOP Folder Configuration
PDF_SOP_PATH=./static/sop/documents
PDF_SOP_URL=/api/sop/documents

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Application
APP_NAME=SOP Management System
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
